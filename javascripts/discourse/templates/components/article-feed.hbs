{{#if args.articles}}
  <div class="article-feed-heading">
    <h4>Latest Headlines</h4>
  </div>
  <div class="owl-carousel owl-theme">
    {{#each args.articles as |article|}}
      <div class="article-wrapper ">
        <div class="article-title-wrapper">
          {{#if article.link}}
            <a title="{{article.title}}" class="article-link" href={{article.link}}>
              <div class="article-thumbnail-wrapper">
                {{#if article.thumbnail}}
                  <img title="{{article.thumbnailTitle}}" src={{article.thumbnail}} height="200" class="article-thumbnail" />
                {{/if}}
              </div>
              {{#if article.title}}
                <h4 class="article-title">{{article.title}}</h4>
              {{/if}}
            </a>
          {{/if}}
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
